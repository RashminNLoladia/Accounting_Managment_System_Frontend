@model Accounting_Managment_System_Frontend.Models.PaymentViewModel

@{
    ViewData["Title"] = "Create Payment";

    var companies = ViewBag.Companies as IEnumerable<CompanyViewModel> ?? Enumerable.Empty<CompanyViewModel>();
    
    var invoices = (ViewBag.Invoices as IEnumerable<SalesInvoiceViewModel>)?.Where(i => !string.IsNullOrEmpty(i.InvoiceNumber)).ToList()
                 ?? new List<SalesInvoiceViewModel>();

    var invoiceSelectList = new SelectList(invoices, "InvoiceId", "InvoiceNumber");


    var bills = ViewBag.Bills as IEnumerable<PurchaseInvoiceViewModel> ?? Enumerable.Empty<PurchaseInvoiceViewModel>();
    var banks = ViewBag.Banks as IEnumerable<BankAccountViewModel> ?? Enumerable.Empty<BankAccountViewModel>();
    var paymentTypes = ViewBag.PaymentTypes as IEnumerable<SelectListItem> ?? new List<SelectListItem>();
}

<h2>Create Payment</h2>

<form asp-action="Create" method="post">
    <!-- Company -->
    <div class="form-group mb-3">
        <label asp-for="CompanyId"></label>
        <select asp-for="CompanyId" class="form-control" asp-items="@(new SelectList(companies, "CompanyId", "Name"))">
            <option value="">-- Select Company --</option>
        </select>
        <span asp-validation-for="CompanyId" class="text-danger"></span>
    </div>

    <!-- Payment Number -->
    <div class="form-group mb-3">
        <label asp-for="PaymentNumber"></label>
        <input asp-for="PaymentNumber" class="form-control" />
        <span asp-validation-for="PaymentNumber" class="text-danger"></span>
    </div>

    <!-- Payment Date -->
    <div class="form-group mb-3">
        <label asp-for="PaymentDate"></label>
        <input asp-for="PaymentDate" type="date" class="form-control" />
        <span asp-validation-for="PaymentDate" class="text-danger"></span>
    </div>

    <!-- Payment Type -->
    <div class="form-group mb-3">
        <label asp-for="PaymentType"></label>
        <select asp-for="PaymentType" class="form-control" asp-items="paymentTypes">
            <option value="">-- Select Type --</option>
        </select>
        <span asp-validation-for="PaymentType" class="text-danger"></span>
    </div>

    <!-- Amount -->
    <div class="form-group mb-3">
        <label asp-for="Amount"></label>
        <input asp-for="Amount" class="form-control" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>

    <!-- Related Invoice -->
    <div class="form-group mb-3">
        <label asp-for="RelatedInvoiceId"></label>
        <select asp-for="RelatedInvoiceId" class="form-control" asp-items="invoiceSelectList">
            <!-- do NOT add inner <option> -->
        </select>
    </div>

   

    <!-- Related Bill -->
    <div class="form-group mb-3">
        <label asp-for="RelatedBillId"></label>
        <select asp-for="RelatedBillId" class="form-control" asp-items="@(new SelectList(bills, "BillId", "BillNumber"))">
            <option value="">-- Select Bill --</option>
        </select>
    </div>

    <!-- Bank Account -->
    <div class="form-group mb-3">
        <label asp-for="BankAccountId"></label>
        <select asp-for="BankAccountId" class="form-control" asp-items="@(new SelectList(banks, "BankAccountId", "BankName"))">
            <option value="">-- Select Bank --</option>
        </select>
    </div>

    <!-- Method -->
    <div class="form-group mb-3">
        <label asp-for="Method"></label>
        <input asp-for="Method" class="form-control" />
    </div>

    <!-- Reference -->
    <div class="form-group mb-3">
        <label asp-for="Reference"></label>
        <input asp-for="Reference" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a class="btn btn-secondary" asp-action="Index">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
