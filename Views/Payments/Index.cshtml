@model IEnumerable<Accounting_Managment_System_Frontend.Models.PaymentViewModel>

@{
    ViewData["Title"] = "Payments";
}

<h2>Payments</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Add Payment</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Payment Number</th>
            <th>Company</th>
            <th>Date</th>
            <th>Amount</th>
            <th>Type</th>
            <th>Method</th>
            <th>Reference</th>
            <th>Created</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var p in Model)
            {
                <tr>
                    <td>@p.PaymentNumber</td>
                    <td>@p.CompanyId</td> <!-- Optionally show Company Name -->
                    <td>@p.PaymentDate.ToString("yyyy-MM-dd")</td>
                    <td>@p.Amount</td>
                    <td>@p.PaymentType</td>
                    <td>@p.Method</td>
                    <td>@p.Reference</td>
                    <td>@(p.CreatedAt?.ToString("yyyy-MM-dd"))</td>
                    <td>
                        <a class="btn btn-sm btn-secondary" asp-action="Edit" asp-route-id="@p.PaymentId">Edit</a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@p.PaymentId">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="9">No payments found.</td></tr>
        }
    </tbody>
</table>
