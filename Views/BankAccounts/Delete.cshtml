@model Accounting_Managment_System_Frontend.Models.BankAccountViewModel

<h2>Delete Bank Account</h2>

<p>Are you sure you want to delete this bank account?</p>

<ul>
    <li><b>Bank Name:</b> @Model.BankName</li>
    <li><b>Account Number:</b> @Model.AccountNumber</li>
    <li><b>Currency:</b> @Model.CurrencyId</li>
</ul>

<form asp-action="DeleteConfirmed" method="post">
    <button class="btn btn-danger">Delete</button>
    <a href="/BankAccounts" class="btn btn-secondary">Cancel</a>
</form>
