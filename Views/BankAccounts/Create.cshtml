@model Accounting_Managment_System_Frontend.Models.BankAccountViewModel

<h2>Create Bank Account</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Company</label>
        <select asp-for="CompanyId" class="form-control"
                asp-items="@(new SelectList(ViewBag.Companies, "CompanyId", "Name"))"></select>
    </div>

    <div class="form-group">
        <label>Bank Name</label>
        <input asp-for="BankName" class="form-control" />
    </div>

    <div class="form-group">
        <label>Account Number</label>
        <input asp-for="AccountNumber" class="form-control" />
    </div>

    <div class="form-group">
        <label>IFSC</label>
        <input asp-for="IFSC" class="form-control" />
    </div>

    <div class="form-group">
        <label>Currency</label>
        <select asp-for="CurrencyId" class="form-control"
                asp-items="@(new SelectList(ViewBag.Currencies, "CurrencyId", "Code"))"></select>
    </div>

    <div class="form-group">
        <label>Opening Balance</label>
        <input asp-for="OpeningBalance" class="form-control" />
    </div>

    <button class="btn btn-success">Save</button>
</form>
