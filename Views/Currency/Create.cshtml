@model Accounting_Managment_System_Frontend.Models.CurrencyViewModel

@{
    ViewData["Title"] = "Create Currency";
}

<h2>Create Currency</h2>

<form asp-action="Create" method="post">
    <div class="form-group mb-3">
        <label asp-for="Code" class="control-label"></label>
        <input asp-for="Code" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Symbol" class="control-label"></label>
        <input asp-for="Symbol" class="form-control" />
        <span asp-validation-for="Symbol" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="DecimalPlaces" class="control-label"></label>
        <input asp-for="DecimalPlaces" class="form-control" type="number" />
        <span asp-validation-for="DecimalPlaces" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
