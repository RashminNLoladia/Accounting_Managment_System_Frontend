@model Accounting_Managment_System_Frontend.Models.TaxRateViewModel

<h2>Edit Tax Rate</h2>

<form asp-action="Edit" method="post">

    <input type="hidden" asp-for="TaxRateId" />

    <div class="form-group mb-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Rate"></label>
        <input asp-for="Rate" class="form-control" type="number" step="0.0001" />
        <span asp-validation-for="Rate" class="text-danger"></span>
        <small class="text-muted">Example: 0.18 = 18%</small>
    </div>

    <div class="form-check mb-3">
        <input asp-for="IsActive" class="form-check-input" />
        <label asp-for="IsActive" class="form-check-label"></label>
    </div>

    <button class="btn btn-primary">Update</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>

</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
