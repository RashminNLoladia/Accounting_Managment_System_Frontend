@model IEnumerable<Accounting_Managment_System_Frontend.Models.TaxRateViewModel>

<h2>Tax Rate List</h2>

<a asp-action="Create" class="btn btn-primary mb-3">+ Add Tax Rate</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Rate (Fraction)</th>
            <th>Active</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Rate</td>
                <td>@(item.IsActive ? "Yes" : "No")</td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.TaxRateId" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.TaxRateId" class="btn btn-danger btn-sm ms-2">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
