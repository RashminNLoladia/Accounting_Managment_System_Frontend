@model IEnumerable<Accounting_Managment_System_Frontend.Models.CustomerViewModel>

@{
    ViewData["Title"] = "Customers";
}

<h2>Customers</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Add Customer</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Contact</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Company</th>
            <th>Active</th>
            <th>Created</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var c in Model)
            {
                <tr>
                    <td>@c.Name</td>
                    <td>@c.ContactName</td>
                    <td>@c.Email</td>
                    <td>@c.Phone</td>
                    <td>@c.CompanyId</td>  <!-- if you want name instead, backend should include CompanyName in DTO -->
                    <td>@(c.IsActive ? "Yes" : "No")</td>
                    <td>@(c.CreatedAt?.ToString("yyyy-MM-dd"))</td>
                    <td>
                        <a class="btn btn-sm btn-secondary" asp-action="Edit" asp-route-id="@c.CustomerId">Edit</a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@c.CustomerId">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="8">No customers found.</td></tr>
        }
    </tbody>
</table>
