@model Accounting_Managment_System_Frontend.Models.BankTransactionViewModel

@{
    ViewData["Title"] = "Delete Bank Transaction";
}

<h2>Delete Bank Transaction</h2>

<h4>Are you sure you want to delete this?</h4>
<hr />

<dl class="row">
    <dt class="col-sm-3">Account</dt>
    <dd class="col-sm-9">@Model.BankAccountId</dd>

    <dt class="col-sm-3">Date</dt>
    <dd class="col-sm-9">@Model.TransactionDate.ToShortDateString()</dd>

    <dt class="col-sm-3">Type</dt>
    <dd class="col-sm-9">@Model.TransactionType</dd>

    <dt class="col-sm-3">Amount</dt>
    <dd class="col-sm-9">@Model.Amount</dd>

    <dt class="col-sm-3">Reference</dt>
    <dd class="col-sm-9">@Model.Reference</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="BankTransactionId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
