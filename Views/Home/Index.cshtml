@{
    ViewData["Title"] = "Home";
}

<div class="hero-section text-white" style="background:#283593; padding:80px 20px;">
    <div class="container text-center">
        <h1 class="fw-bold mb-3">Accounting Management System</h1>
        <p class="lead mb-4">
            Handle invoices, bills, banking, and financial reports — all in one place.
        </p>

        <a href="/Users/Login" class="btn btn-light btn-lg px-5">Login</a>
    </div>
</div>

<div class="container mt-5">

    <!-- Features Section -->
    <div class="row text-center mb-5">
        <h2 class="fw-bold mb-4">What You Can Do Here</h2>

        <div class="col-md-4 mb-4">
            <div class="p-4 shadow-sm rounded bg-white">
                <h5 class="fw-bold">Manage Sales</h5>
                <p>Create invoices, track dues, see payment history, and stay on top of revenue.</p>
            </div>
        </div>

        <div class="col-md-4  mb-4">
            <div class="p-4 shadow-sm rounded bg-white">
                <h5 class="fw-bold">Track Purchases</h5>
                <p>Record bills, monitor vendor payments, and keep your expenses organized.</p>
            </div>
        </div>

        <div class="col-md-4  mb-4">
            <div class="p-4 shadow-sm rounded bg-white">
                <h5 class="fw-bold">Handle Banking</h5>
                <p>Cash, bank accounts, transfers, receipts, payments — all linked to your ledger.</p>
            </div>
        </div>
    </div>

    <!-- Highlights Section -->
    <div class="row align-items-center my-5">
        <div class="col-md-6 mb-4">
            <h3 class="fw-bold">Stay In Control</h3>
            <p class="mt-3">
                Track your company’s financial health with real-time numbers.
                Quick access to customers, vendors, products, invoices, bills, and journals.
            </p>
            <a href="/Dashboard" class="btn btn-primary px-4">Go to Dashboard</a>
        </div>

        <div class="col-md-6 text-center">
            <img src="https://cdn-icons-png.flaticon.com/512/2331/2331959.png"
                 width="250" />
        </div>
    </div>

    <!-- About Section -->
    <div class="row mb-5">
        <div class="col-md-12 text-center">
            <h3 class="fw-bold">Multi-Company. Multi-User. Fully Connected.</h3>
            <p class="mt-3">
                Your system supports multiple companies, multiple users, and strong data integrity.
                Everything—sales, purchase, ledger, GST, banking—runs on a single reliable backend.
            </p>
        </div>
    </div>

</div>

<!-- Footer -->
<footer class="text-center py-3 mt-5 text-muted border-top">
    © @DateTime.Now.Year Accounting Management System
</footer>