@model Accounting_Managment_System_Frontend.Models.LoginViewModel

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    body {
        margin: 0;
        padding: 0;
        font-family: 'Segoe UI', sans-serif;
        background-color: #f8f9fa;
    }

    .login-container {
        display: flex;
        min-height: 100vh;
    }

    /* Left Side */
    .login-left {
        flex: 1;
        background-color: #1e1e6a;
        color: white;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding: 2rem;
        position: relative;
        overflow: hidden;
    }

        .login-left h1 {
            font-size: 2.5rem;
            font-weight: bold;
            line-height: 1.3;
            text-align: center;
        }

        /* Optional geometric shapes like the image */
        .login-left::after {
            content: '';
            position: absolute;
            top: 20%;
            left: 30%;
            width: 200px;
            height: 200px;
            background: rgba(255, 255, 255, 0.05);
            transform: rotate(45deg);
        }

    /* Right Side */
    .login-right {
        flex: 1;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 2rem;
    }

    .login-card {
        width: 100%;
        max-width: 400px;
        padding: 2.5rem 2rem;
        border-radius: 16px;
        background-color: #fff;
        box-shadow: 0 8px 25px rgba(0,0,0,0.15);
        transition: all 0.3s ease;
    }

        .login-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 30px rgba(0,0,0,0.2);
        }

        .login-card h2 {
            margin-bottom: 1.5rem;
            font-weight: 600;
            text-align: center;
            color: #1e1e6a;
        }

        .login-card .btn-primary {
            background-color: #1e1e6a;
            border: none;
            width: 100%;
            padding: 0.6rem 1rem;
            font-size: 1rem;
            border-radius: 8px;
            transition: background 0.3s ease;
        }

            .login-card .btn-primary:hover {
                background-color: #0f0f3a;
            }

        .login-card a {
            text-decoration: none;
            font-size: 0.9rem;
            color: #1e1e6a;
        }

            .login-card a:hover {
                text-decoration: underline;
            }

    .text-danger {
        margin-top: 0.5rem;
        display: block;
    }
</style>

<div class="login-container">
    <!-- Left Panel -->
    <div class="login-left">
        <h1>Hello!<br>Have a <strong>GOOD DAY</strong></h1>
    </div>

    <!-- Right Panel -->
    <div class="login-right">
        <div class="login-card">
            <h2>Login</h2>
            <form asp-action="Login" method="post">
                <div class="mb-3">
                    <label asp-for="UserName" class="form-label">Username</label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password" type="password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="mb-3 text-end">
                    <a href="#">forgot password?</a>
                </div>

                <button type="submit" class="btn btn-primary mb-3">Login</button>

                <p class="text-center">
                    Don't have any account? <a href="Create">Create an account</a>
                </p>

                <p class="text-danger text-center">@ViewBag.Error</p>
            </form>
        </div>
    </div>
</div>
