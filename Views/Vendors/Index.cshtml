@model IEnumerable<Accounting_Managment_System_Frontend.Models.VendorViewModel>

@{
    ViewData["Title"] = "Vendors";
}

<h2>Vendors</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Add Vendor</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Contact</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Company</th>
            <th>Active</th>
            <th>Created</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var v in Model)
            {
                <tr>
                    <td>@v.Name</td>
                    <td>@v.ContactName</td>
                    <td>@v.Email</td>
                    <td>@v.Phone</td>
                    <td>@v.CompanyId</td> <!-- include CompanyName in DTO if you want the name -->
                    <td>@(v.IsActive ? "Yes" : "No")</td>
                    <td>@(v.CreatedAt?.ToString("yyyy-MM-dd"))</td>
                    <td>
                        <a class="btn btn-sm btn-secondary" asp-action="Edit" asp-route-id="@v.VendorId">Edit</a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@v.VendorId">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="8">No vendors found.</td></tr>
        }
    </tbody>
</table>
