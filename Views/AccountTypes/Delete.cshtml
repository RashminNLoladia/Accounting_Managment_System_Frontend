@model Accounting_Managment_System_Frontend.Models.AccountTypeViewModel

@{
    ViewData["Title"] = "Delete Account Type";
}

<h2>Delete Account Type</h2>

<h4>Are you sure you want to delete this account type?</h4>

<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Is Active</dt>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="AccountTypeId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>
