@model IEnumerable<Accounting_Managment_System_Frontend.Models.ProductViewModel>

@{
    ViewData["Title"] = "Products";
}

<h2>Products</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Add Product</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>SKU</th>
            <th>Name</th>
            <th>Company</th>
            <th>Sales Account</th>
            <th>Purchase Account</th>
            <th>Unit Price</th>
            <th>Active</th>
            <th>Created</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var p in Model)
            {
                <tr>
                    <td>@p.SKU</td>
                    <td>@p.Name</td>
                    <td>@(string.IsNullOrEmpty(p.CompanyName) ? p.CompanyId.ToString() : p.CompanyName)</td>
                    <td>@(string.IsNullOrEmpty(p.SalesAccountName) ? (p.SalesAccountId?.ToString() ?? "") : p.SalesAccountName)</td>
                    <td>@(string.IsNullOrEmpty(p.PurchaseAccountName) ? (p.PurchaseAccountId?.ToString() ?? "") : p.PurchaseAccountName)</td>
                    <td>@(p.UnitPrice?.ToString("0.00") ?? "")</td>
                    <td>@(p.IsActive ? "Yes" : "No")</td>
                    <td>@(p.CreatedAt?.ToString("yyyy-MM-dd"))</td>
                    <td>
                        <a class="btn btn-sm btn-secondary" asp-action="Edit" asp-route-id="@p.ProductId">Edit</a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@p.ProductId">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="9">No products found.</td></tr>
        }
    </tbody>
</table>
