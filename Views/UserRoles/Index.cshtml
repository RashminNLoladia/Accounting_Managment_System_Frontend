@model IEnumerable<Accounting_Managment_System_Frontend.Models.UserRoleViewModel>

@{
    ViewData["Title"] = "User Roles";
}

<h2>User Roles</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Assign Role</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>User</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ur in Model)
        {
            <tr>
                <td>@ur.UserId</td>
                <td>@ur.RoleId</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@ur.UserRoleId" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@ur.UserRoleId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
