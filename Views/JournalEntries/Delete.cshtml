@model Accounting_Managment_System_Frontend.Models.JournalEntryViewModel

<h2>Delete Journal Entry</h2>

<div>
    <h4>Are you sure you want to delete this Journal Entry?</h4>
    <dl class="row">
        <dt class="col-sm-2">Journal Number</dt>
        <dd class="col-sm-10">@Model.JournalNumber</dd>

        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.Date.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-2">Company</dt>
        <dd class="col-sm-10">@Model.CompanyId</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        @Html.HiddenFor(m => m.JournalEntryId)
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
