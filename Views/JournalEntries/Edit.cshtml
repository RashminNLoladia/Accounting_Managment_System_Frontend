@model Accounting_Managment_System_Frontend.Models.JournalEntryViewModel

<h2>Edit Journal Entry</h2>

<form asp-action="Edit" method="post">
    @Html.HiddenFor(m => m.JournalEntryId)

    <div class="form-group">
        <label asp-for="CompanyId"></label>
        <select asp-for="CompanyId" class="form-control" asp-items="@(new SelectList(ViewBag.Companies, "CompanyId", "Name"))"></select>
    </div>

    <div class="form-group">
        <label asp-for="JournalNumber"></label>
        <input asp-for="JournalNumber" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Date"></label>
        <input asp-for="Date" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Narration"></label>
        <textarea asp-for="Narration" class="form-control"></textarea>
    </div>

    <hr />
    <h4>Journal Lines</h4>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Account</th>
                <th>Description</th>
                <th>Debit</th>
                <th>Credit</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Lines.Count; i++)
            {
                <tr>
                    <td>
                        <select asp-for="Lines[i].AccountId" class="form-control" asp-items="@(new SelectList(ViewBag.Accounts, "AccountId", "Name"))"></select>
                    </td>
                    <td><input asp-for="Lines[i].Description" class="form-control" /></td>
                    <td><input asp-for="Lines[i].Debit" class="form-control" /></td>
                    <td><input asp-for="Lines[i].Credit" class="form-control" /></td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
