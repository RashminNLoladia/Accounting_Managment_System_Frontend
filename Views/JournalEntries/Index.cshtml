@model IEnumerable<Accounting_Managment_System_Frontend.Models.JournalEntryViewModel>

<h2>Journal Entries</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Add Journal Entry</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Journal Number</th>
            <th>Date</th>
            <th>Company</th>
            <th>Status</th>
            <th>Created At</th>
            <th>Posted At</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var j in Model)
            {
                <tr>
                    <td>@j.JournalNumber</td>
                    <td>@j.Date.ToString("yyyy-MM-dd")</td>
                    <td>@j.CompanyId</td>
                    <td>@j.Status</td>
                    <td>@(j.CreatedAt?.ToString("yyyy-MM-dd"))</td>
                    <td>@(j.PostedAt?.ToString("yyyy-MM-dd"))</td>
                    <td>
                        <a class="btn btn-sm btn-secondary" asp-action="Edit" asp-route-id="@j.JournalEntryId">Edit</a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@j.JournalEntryId">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="7">No journal entries found.</td></tr>
        }
    </tbody>
</table>
