@model Accounting_Managment_System_Frontend.Models.CompanyViewModel

@{
    ViewData["Title"] = "Delete Company";
}

<h2>Delete Company</h2>

<h4>Are you sure you want to delete this company?</h4>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Short Name</dt>
        <dd class="col-sm-10">@Model.ShortName</dd>

        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.Phone</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Active</dt>
        <dd class="col-sm-10">@(Model.IsActive ? "Yes" : "No")</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="CompanyId" />

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
