@model IEnumerable<Accounting_Managment_System_Frontend.Models.CompanyViewModel>

@{
    ViewData["Title"] = "Companies";
}

<h2>Companies</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Short Name</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Active</th>
            <th style="width:150px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.ShortName</td>
                <td>@item.Phone</td>
                <td>@item.Email</td>
                <td>@(item.IsActive ? "Yes" : "No")</td>
                <td>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.CompanyId">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.CompanyId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
