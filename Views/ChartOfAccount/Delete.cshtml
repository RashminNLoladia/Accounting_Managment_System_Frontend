@model Accounting_Managment_System_Frontend.Models.ChartOfAccountViewModel

@{
    ViewData["Title"] = "Delete Chart of Account";
}

<h2>Delete Chart of Account</h2>

<h4>Are you sure you want to delete this account?</h4>
<div>
    <dl class="row">
        <dt class="col-sm-2">Account Number</dt>
        <dd class="col-sm-10">@Model.AccountNumber</dd>

        <dt class="col-sm-2">Account Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Company</dt>
        <dd class="col-sm-10">@Model.CompanyName</dd>

        <dt class="col-sm-2">Account Type</dt>
        <dd class="col-sm-10">@Model.AccountTypeName</dd>

        <dt class="col-sm-2">Parent Account</dt>
        <dd class="col-sm-10">@Model.ParentAccountName</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="AccountId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>
