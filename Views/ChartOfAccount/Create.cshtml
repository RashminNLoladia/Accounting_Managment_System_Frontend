@model Accounting_Managment_System_Frontend.Models.ChartOfAccountViewModel

@{
    ViewData["Title"] = "Create Chart of Account";
}

<h2>Create Chart of Account</h2>

<form asp-action="Create" method="post">
    <div class="form-group mb-3">
        <label asp-for="CompanyId"></label>
        <select asp-for="CompanyId" class="form-select"
                asp-items="@(new SelectList(ViewBag.Companies, "Key", "Value"))">
            <option value="">--select company--</option>
        </select>
        <span asp-validation-for="CompanyId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ParentAccountId"></label>
        <select asp-for="ParentAccountId" class="form-select"
                asp-items="@(new SelectList(ViewBag.ParentAccounts, "Key", "Value"))">
            <option value="">-- None --</option>
        </select>
        <span asp-validation-for="ParentAccountId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="AccountNumber"></label>
        <input asp-for="AccountNumber" class="form-control" />
        <span asp-validation-for="AccountNumber" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="AccountTypeId"></label>
        <select asp-for="AccountTypeId" class="form-select"
                asp-items="@(new SelectList(ViewBag.AccountTypes, "Key", "Value"))"></select>
        <span asp-validation-for="AccountTypeId" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="IsActive" class="form-check-input" />
        <label asp-for="IsActive" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>
