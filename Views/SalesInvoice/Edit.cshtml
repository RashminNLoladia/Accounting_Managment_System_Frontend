@model Accounting_Managment_System_Frontend.Models.SalesInvoiceViewModel

@{
    ViewData["Title"] = "Edit Sales Invoice";

    var customers = ViewBag.Customers as IEnumerable<Accounting_Managment_System_Frontend.Models.CustomerViewModel> ?? new List<Accounting_Managment_System_Frontend.Models.CustomerViewModel>();
    var products = ViewBag.Products as IEnumerable<Accounting_Managment_System_Frontend.Models.ProductViewModel> ?? new List<Accounting_Managment_System_Frontend.Models.ProductViewModel>();
}

<h2>Edit Sales Invoice</h2>

<form asp-action="Edit" method="post">
    @Html.HiddenFor(m => m.Id)

    <div class="form-group">
        <label asp-for="CustomerId"></label>
        <select asp-for="CustomerId" class="form-control" asp-items="@(new Microsoft.AspNetCore.Mvc.Rendering.SelectList(customers, "CustomerId", "Name"))">
            <option value="">-- Select Customer --</option>
        </select>
        <span asp-validation-for="CustomerId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="InvoiceDate"></label>
        <input asp-for="InvoiceDate" type="date" class="form-control" />
        <span asp-validation-for="InvoiceDate" class="text-danger"></span>
    </div>

    <hr />
    <h4>Invoice Items</h4>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody id="invoiceItems">
            @for (int i = 0; i < Model.Items.Count; i++)
            {
                <tr>
                    <td>
                        <select name="Items[@i].ProductId" class="form-control">
                            <option value="">-- Select Product --</option>
                            @foreach (var p in products)
                            {
                                <option value="@p.ProductId" selected="@(p.ProductId == Model.Items[i].ProductId ? "selected" : null)">
                                    @p.Name
                                </option>

                            }
                        </select>
                    </td>
                    <td><input name="Items[@i].Quantity" type="number" step="0.01" value="@Model.Items[i].Quantity" class="form-control" /></td>
                    <td><input name="Items[@i].UnitPrice" type="number" step="0.01" value="@Model.Items[i].UnitPrice" class="form-control" /></td>
                    <td><input name="Items[@i].Total" type="number" step="0.01" value="@Model.Items[i].Total" class="form-control" readonly /></td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary">Update</button>
    <a class="btn btn-secondary" asp-action="Index">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // calculate total dynamically
        document.addEventListener("input", function (e) {
            if (e.target.name.includes("Quantity") || e.target.name.includes("UnitPrice")) {
                const row = e.target.closest("tr");
                const qty = parseFloat(row.querySelector('[name*="Quantity"]').value) || 0;
                const price = parseFloat(row.querySelector('[name*="UnitPrice"]').value) || 0;
                row.querySelector('[name*="Total"]').value = (qty * price).toFixed(2);
            }
        });
    </script>
}
