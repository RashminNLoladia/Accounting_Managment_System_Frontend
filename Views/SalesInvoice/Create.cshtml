@model Accounting_Managment_System_Frontend.Models.SalesInvoiceViewModel

@{
    ViewData["Title"] = "Create Sales Invoice";

    // safely cast ViewBag to IEnumerable or fallback to empty list
    var customers = ViewBag.Customers as IEnumerable<Accounting_Managment_System_Frontend.Models.CustomerViewModel> ?? new List<Accounting_Managment_System_Frontend.Models.CustomerViewModel>();
    var products = ViewBag.Products as IEnumerable<Accounting_Managment_System_Frontend.Models.ProductViewModel> ?? new List<Accounting_Managment_System_Frontend.Models.ProductViewModel>();
}

<h2>Create Sales Invoice</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="CustomerId"></label>
        <select asp-for="CustomerId" class="form-control" asp-items="@(new Microsoft.AspNetCore.Mvc.Rendering.SelectList(customers, "CustomerId", "Name"))">
            <option value="">-- Select Customer --</option>
        </select>
        <span asp-validation-for="CustomerId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="InvoiceDate"></label>
        <input asp-for="InvoiceDate" type="date" class="form-control" />
        <span asp-validation-for="InvoiceDate" class="text-danger"></span>
    </div>

    <hr />
    <h4>Invoice Items</h4>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody id="invoiceItems">
            <tr>
                <td>
                    <select name="Items[0].ProductId" class="form-control">
                        <option value="">-- Select Product --</option>
                        @foreach (var p in products)
                        {
                            <option value="@p.ProductId">@p.Name</option>
                        }
                    </select>
                </td>
                <td><input name="Items[0].Quantity" type="number" value="1" class="form-control" /></td>
                <td><input name="Items[0].UnitPrice" type="number" step="0.01" value="0" class="form-control" /></td>
                <td><input name="Items[0].Total" type="number" step="0.01" value="0" class="form-control" readonly /></td>
            </tr>
        </tbody>
    </table>

    <button type="submit" class="btn btn-success">Save Invoice</button>
    <a class="btn btn-secondary" asp-action="Index">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // optional: add JS to calculate totals dynamically
        document.addEventListener("input", function (e) {
            if (e.target.name.includes("Quantity") || e.target.name.includes("UnitPrice")) {
                const row = e.target.closest("tr");
                const qty = parseFloat(row.querySelector('[name*="Quantity"]').value) || 0;
                const price = parseFloat(row.querySelector('[name*="UnitPrice"]').value) || 0;
                row.querySelector('[name*="Total"]').value = (qty * price).toFixed(2);
            }
        });
    </script>
}
