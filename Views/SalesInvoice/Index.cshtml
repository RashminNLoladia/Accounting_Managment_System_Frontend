@model List<Accounting_Managment_System_Frontend.Models.SalesInvoiceViewModel>

@{
    var customers = ViewBag.Customers as IEnumerable<CustomerViewModel>;
}

<h2>Sales Invoices</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Invoice</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Invoice #</th>
            <th>Customer</th>
            <th>Invoice Date</th>
            <th>SubTotal</th>
            <th>Total</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var invoice in Model)
            {
                <tr>
                    <td>@invoice.InvoiceNumber</td>
                    <td>
                        @{
                            var customer = customers?.FirstOrDefault(c => c.CustomerId == invoice.CustomerId);
                        }
                        @customer?.Name ?? "N/A"
                    </td>
                    <td>@invoice.InvoiceDate.ToString("yyyy-MM-dd")</td>
                    <td>@invoice.SubTotal.ToString("F2")</td>
                    <td>@invoice.Total.ToString("F2")</td>
                    <td>@invoice.Status</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@invoice.InvoiceId" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@invoice.InvoiceId" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center">No invoices found.</td>
            </tr>
        }
    </tbody>
</table>
