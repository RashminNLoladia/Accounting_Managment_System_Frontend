@model Accounting_Managment_System_Frontend.Models.PurchaseInvoiceViewModel
@{
    ViewData["Title"] = "Create Purchase Invoice";
    var companies = ViewBag.Companies as IEnumerable<CompanyViewModel> ?? new List<CompanyViewModel>();
    var vendors = ViewBag.Vendors as IEnumerable<VendorViewModel> ?? new List<VendorViewModel>();
    var currencies = ViewBag.Currencies as IEnumerable<CurrencyViewModel> ?? new List<CurrencyViewModel>();
    var products = ViewBag.Products as IEnumerable<ProductViewModel> ?? new List<ProductViewModel>();
    var taxRates = ViewBag.TaxRates as IEnumerable<TaxRateViewModel> ?? new List<TaxRateViewModel>();
}

<h2>Create Purchase Invoice</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="CompanyId"></label>
        <select asp-for="CompanyId" class="form-control" asp-items="@(new SelectList(companies, "CompanyId", "Name"))">
            <option value="">-- Select Company --</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="VendorId"></label>
        <select asp-for="VendorId" class="form-control" asp-items="@(new SelectList(vendors, "VendorId", "Name"))">
            <option value="">-- Select Vendor --</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="CurrencyId"></label>
        <select asp-for="CurrencyId" class="form-control" asp-items="@(new SelectList(currencies, "CurrencyId", "Name"))">
            <option value="">-- Select Currency --</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="BillDate"></label>
        <input asp-for="BillDate" class="form-control" type="date" />
    </div>

    <div class="form-group">
        <label asp-for="BillNumber"></label>
        <input asp-for="BillNumber" class="form-control" />
    </div>

    <h4>Items</h4>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Product</th>
                <th>Description</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Tax Rate</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Items.Count; i++)
            {
                <tr>
                    <td>
                        <select asp-for="@Model.Items[i].ProductId" class="form-control" asp-items="@(new SelectList(products, "ProductId", "Name"))">
                            <option value="">-- Select Product --</option>
                        </select>
                    </td>
                    <td><input asp-for="@Model.Items[i].Description" class="form-control" /></td>
                    <td><input asp-for="@Model.Items[i].Quantity" class="form-control" type="number" step="0.01" /></td>
                    <td><input asp-for="@Model.Items[i].UnitPrice" class="form-control" type="number" step="0.01" /></td>
                    <td>
                        <select asp-for="@Model.Items[i].TaxRateId" class="form-control" asp-items="@(new SelectList(taxRates, "TaxRateId", "Name"))">
                            <option value="">-- Select Tax --</option>
                        </select>
                    </td>
                    <td>@Model.Items[i].LineTotal</td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
